<%- include("./partials/header.ejs") %>

<div class="home"><a href="./home">الصفحة الرئيسية</a></div>

<h1>تسجيل انتاج الحليب اليومي الكلي</h1>
<form action="/milkProduction" method="post" class="wrapper">
    <div>
        <input type="number" name="milk_ltr" min="0" placeholder="... ادخل كمية الحليب" oninvalid="this.setCustomValidity('من فضلك ادخل كمية الحليب')" required />
        <label id="label1" for="milk_ltr">الكمية </label>
    </div>
    <div>
        <input type="date" name="production_date" class="date" required />
        <label id="label2" for="production_date"> اليوم</label>
    </div>
    <button  class="btn1">تسجيل</button>
</form>
<form method="get" action="milkData">
    <button class="btn2">قائمة الانتاج  </button>
</form>
<script type="text/javascript">

    //set date to the current date
    var currentDate = new Date();
    var m = currentDate.getMonth()+1
    var y =currentDate.getFullYear()
    var d = currentDate.getDate()

    if(m<10){m = '0'+m};  if(d<10){d = '0'+d};

    var today =y +'-'+m+ '-' + d
    document.querySelector('.date').value = today
    document.querySelector('.date').setAttribute('max',today)

</script>
