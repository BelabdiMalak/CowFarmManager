<%- include("./partials/header.ejs") %>
<div class="home"><a href="./home">الصفحة الرئيسية</a></div>
<h1 id="regTitle">تسجيل البقر</h1>
<form method="post" action="cowRegistration" class="wrapper">
    <p><%= message %></p>
    <div>
        <input type="number" name="cow_num" min="0" placeholder="... ادخل رقم البقرة" oninvalid="this.setCustomValidity('من فضلك ادخل رقم البقرة')"required />
        <label id="label3" for="cow_num">الرقم</label>
    </div>
    <div>
        <select name="type" required>
            <option>الهولتشاين</option>
            <option>المونتبليارد</option>
        </select>
        <label id="label5" for="type">السلالة </label>
    </div>
    <div>
        <input type="date" name="reg_date" class="date" required />
        <label id="label4" for="reg_date">تاريخ الدخول </label>
    </div>
    <button  class="btn1">تسجيل </button>
</form>
<form method="get" action="/regData">
    <button class="btn2">قائمة البقر </button>
</form>

<script type="text/javascript">

    // set date to the current date
    var currentDate = new Date();
    var m = currentDate.getMonth()+1
    var y =currentDate.getFullYear()
    var d = currentDate.getDate()

    if(m<10){m = '0'+m};  if(d<10){d = '0'+d};

    var today =y +'-'+m+ '-' + d
    document.querySelector('.date').value = today
    document.querySelector('.date').setAttribute('max',today);

</script>
